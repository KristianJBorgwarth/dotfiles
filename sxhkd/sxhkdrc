# terminal emulator
super + Return
	alacritty

# program launcher
super + space
    rofi -m primary -show drun

# brave launch
super + b
	/usr/bin/brave-browser

# rider launcher
super + r
	env XCURSOR_SIZE=16 XCURSOR_THEME=Adwaita setsid rider

# screencapture to clipboard, then refocus the window under the cursor
super + shift + s
    flameshot gui -c; sleep 0.1; bspc node -f pointed || bspc node -f last

# datagrip launcher
super + d
	env XCURSOR_SIZE=16 XCURSOR_THEME=Adwaita setsid datagrip

# k9s launcher
super + alt + k
	alacritty -e /home/linuxbrew/.linuxbrew/bin/k9s

# open file manager
super + shift f
	thunar

# restart bspwm
super + shift + b
	bspc wm -r

# lock screen
super + 0
    i3lock -c 000000

# open dotfiles in nvim
super + e
   alacritty -e /opt/nvim-linux-x86_64/bin/nvim ~/dotfiles

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Volume down
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%

# Volume up
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%

# Mute toggle
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

#
# windows
#

# kill app
super + mod1 + Delete
	bspc node -k

# quit/restart bspwm
super + mod1 + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focupc desktop -f ^{1-9}
9
# move focused window to desktop 1–9
super + shift + {1-9}
    bspc node -d ^{1-9}


# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-5,0}
	bspc {desktop -f,node -d} '^{1-5,0}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

super + mod1 + {h,j,k,l}
    bspc node -z {left -20 0,down 0 20,up 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + shift + mod1 + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}s the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus desktop 1–9
super + {1-9}
    bspc desktop -f ^{1-9}
9
# move focused window to desktop 1–9
super + shift + {1-9}
    bspc node -d ^{1-9}


# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-5,0}
	bspc {desktop -f,node -d} '^{1-5,0}'

