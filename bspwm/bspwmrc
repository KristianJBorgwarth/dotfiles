#! /bin/sh

#------------------------
# Monitor layout
#-----------------------
if command -v autorandr >/dev/null 2>&1; then
  PYTHONWARNINGS=ignore::SyntaxWarning autorandr --change --default default
else
  # Fallback: pick first connected output so you always get a screen
  FIRST="$(xrandr --query | awk '/ connected/{print $1; exit}')"
  [ -n "$FIRST" ] && xrandr --output "$FIRST" --auto --primary
fi

### Keyboard Remapping

# To enable third-level character access on a 65% Danish keyboard, I remap `Caps Lock` to `ISO_Level3_Shift`
# This is configured in `dotfiles/mods/.Xmodmap`
setxkbmap -layout dk -option &
sleep 1 && xmodmap ~/dotfiles/mods/.Xmodmap &

pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor DP-2 -d 2 3 4 5 6 7 8 9  
bspc monitor HDMI-1 -d 1


# Border colors
bspc config border_width         2
bspc config normal_border_color "#222222"
bspc config active_border_color "#444444"
bspc config focused_border_color "#71b3ff"
bspc config presel_feedback_color "#3a9bdc"


bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off

picom &
sleep 0.2
~/.config/polybar/launch.sh &


# Set wallpaper
feh --no-fehbg --bg-fill ~/dotfiles/cosmetics/wallpapers/foggy-woods.jpg


# Launch notifications
dunst &
