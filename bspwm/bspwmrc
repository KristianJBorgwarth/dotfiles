#! /bin/sh

#------------------------
# Monitor layout
#-----------------------
# DP-2 horizontal, primary
xrandr --output HDMI-1 --mode 1920x1080 --rotate right --pos 0x0 \
       --output DP-2 --primary --mode 2560x1440 --rotate normal --pos 1080x0

### Keyboard Remapping

# To enable third-level character access on a 65% Danish keyboard, I remap `Caps Lock` to `ISO_Level3_Shift`
# This is configured in `dotfiles/mods/.Xmodmap`
setxkbmap -layout dk -option &
sleep 1 && xmodmap ~/dotfiles/mods/.Xmodmap &

pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor DP-2 -d 2 3 4  
bspc monitor HDMI-1 -d 1


# Border colors
bspc config normal_border_color "#222222"
bspc config active_border_color "#444444"
bspc config focused_border_color "#3a9bdc"
bspc config presel_feedback_color "#3a9bdc"


bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off

picom &
sleep 0.1
~/.config/polybar/launch.sh &


# Set wallpaper
feh --no-fehbg --bg-fill ~/Pictures/forrest.jpg


# Launch notifications
dunst &
